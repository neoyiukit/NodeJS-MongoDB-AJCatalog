<% include partials/header %>

<div class="container">
<header class="jumbotron">
    <div class="container">
    <h1>Welcome to Neo's Air Jordan Locker!</h1>
    <p>View all the AJs all around the world.</p>
    <p>
        <a class="btn btn-primary btn-large" href="/AJFootLocker/new">Add New AJs</a>
    </p>
    </div>
</header>

<div class="row">
    <div class="col-lg-12">
        <h3>My AJs Collections</h3>
    </div>
</div>

<div class="row text-center" style="display:flex; flex-wrap: wrap;">
    <% AllAJs.forEach(function(AllAJ){ %>
    <div class="col-md-3 col-sm-6">
        <div class="thumbnail">
            <img src="<%= AllAJ.image %>">
            <div class="caption"><h4><%= AllAJ.Name %></h4></div>
            <p>
                <a href="/AJFootLocker/<%= AllAJ._id %>" class="btn btn-primary">More Details</a>
            </p>
        </div>
    </div>
    <% }); %>
</div>
</div>

<% include partials/footer %>